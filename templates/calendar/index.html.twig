    <link rel="stylesheet" type="text/css" href="{{asset('asset/fullCalendar/packages/daygrid/main.css')}}" />
    <link rel="stylesheet" type="text/css" href="{{asset('asset/fullCalendar/packages/list/main.css')}}" />


{% endblock %}

{% block body %}
