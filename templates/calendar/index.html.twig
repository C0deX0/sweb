                                <button class="btn btn-link" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                    Actions
                                </button>
                            </h5>
                        </div>
                        <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion">
                            <div class="card-body">
                                <div>
                                    <button class="btn btn-danger mr-2" id="createEventIndicator">•</button>
                                    <button class="btn btn-success" type="button" onclick="calendarClass.calendarLoadEvents()">Enable Create Event</button>
                                    <br>
                                </div>
                                <hr class="my-2" style="background-color: white">
                                <div>
                                    <button class="btn btn-success mr-2" id="">•</button>
                                    <button class="btn btn-success" type="button" onclick="calendarClass.createEvent()">Add Events</button>
